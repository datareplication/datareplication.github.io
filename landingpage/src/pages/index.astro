---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<Layout title="Datareplication.io">

    <main>
        <Header/>
        <div class="body">
            <h1>Datareplication.io</h1>
            <ul>
                <li class="theme"><a href="/spec">Spec</a></li>
                <li class="theme"><a href="/datareplication-java">Javadoc</a></li>
            </ul>
        </div>
        <Footer/>
    </main>
</Layout>

<style>
    main {
        width: 80%;
        margin: auto;
        //padding: 1rem;
        color: black;
        font-size: 20px;
        line-height: 1.6;
    }
    .body{
        min-height: calc(100vh - 200px);
    }
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
</style>
